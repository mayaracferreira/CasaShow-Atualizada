@model IEnumerable<CasaShow.Models.Casa>

    
<h3>Casas & Clubes</h3>

<table width="100%" border="1px" style="background-color:white">

<thead>
    <th>Nome</th>
    <th>Endereço</th>
    <th>Editar</th>
    <th>Excluir</th>
   
</thead>

<body>

@foreach(var casa in Model) 


{
    <tr>
   
    <td >@casa.Nome </td>
    <td>@casa.Endereço</td>   
    <td><a href="/Casas/Editar/@casa.Id"  class="btn btn-success">Editar</a></td>    
    <td><a href="/Casas/Deletar/@casa.Id" class="btn btn-danger">Deletar</a></td>


    </tr>
}

</body>
</table>